{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node"
  },
  "include": ["**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
